// Bootstrap // ------
.container-90 {
	@media screen and (min-width: $screen-lg-min) {
		width: 90%;
	}
}
.container-90-md {
	@media screen and (min-width: $screen-md-min) {
		width: 90%;
	}
}
.container-90-xs {
	width: 90%;
}

// Slick Slider // ------
.hero__title {
	margin-bottom: 0px;
}
.hero--full-height {
	@media screen and (max-width: $screen-sm-max){
		height: 80vh;
	}
	@media screen and (min-width: $screen-md-min) {
		height: 60vh;
	}
	@media screen and (min-width: $screen-lg-min) {
		height: 82vh;
	}
}
.hero .slick-prev {
	left: 10px;
}
.hero .slick-next {
	right: 10px;
}
//General // ------

// The container that holds the product partials on the homepage.
.product-collection {
	margin-top: 80px;
	margin-bottom: 80px;
}

.product-partial {
	padding: 50px;
	@media (max-width: $screen-sm-max) {
		padding: 10px;
	}
	&:hover {
		.product-partial--title {
			transition: all .25s ease;
			color: $fw-accent;
		}
	}
}
.product-partial img {
	max-height: 400px;
	@media (max-width: $screen-xs-max) {
		max-height: 30vh;
	}
}
.product-partial--caption {
	text-align: center;
	transition: all .25s ease;
	&:hover {
		text-decoration: none;
	}
	&:focus {
		text-decoration: none;
	}
}
.product-partial--title {
	text-transform: uppercase;
	letter-spacing: 0.2rem;
}
.product-partial--price {
	color: $fw-black;
	text-transform: uppercase;
}

//Related Products
.related-products {
  background-size: cover;
  background-position: 50%;
  border-top: 4px solid $fw-black;
  padding: 60px 0px 90px 0px;
}

.related-products .product-partial {
	background: rgb(255,255,255);
	border: $border-default solid $fw-black;
	padding: 25px;
	@media (max-width: $screen-sm-max) {
		padding: 10px;
		&:not(:last-child) {
			margin-bottom: 30px;
		}
	}
}
.related-products .product-partial img {
	display: block;
	margin: 2rem auto;
	max-height: 280px;
}
.related-products .product-partial--caption {
	text-align: right;
	@media (max-width: $screen-sm-max) {
		text-align: center;
	}
}
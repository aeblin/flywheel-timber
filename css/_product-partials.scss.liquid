.product-partial {
	padding: 50px;
	@media (max-width: $screen-sm-max) {
		padding: 10px;
	}
}

.product-partial--caption {
	text-align: center;
	&:hover {
		text-decoration: none;
	}
	&:focus {
		text-decoration: none;
	}
}

.product-partial--title {
	font-weight: 700;
	text-transform: uppercase;
}
.product-partial--price {
	color: #151515;
	font-weight: 700;
	text-transform: uppercase;
}

.pre-footer {
	border-top: 2px solid $fw-slate;
	padding: 60px 0px 60px 0px;
}
// Styles for GMap
.pre-footer #map {
	width: auto;
	height: 500px;
}

// Styles for GCal
.calEvent a {
	color: rgb(255,255,255);
}
.calEvent a:hover {
	color: $fw-orange;
	.calDateSquare {
		background: $fw-orange;
		color: rgb(255,255,255);
	}
}
.calDateSquare {
	float: left;
	background: rgb(255,255,255);
	color: $fw-black;
	width: 50px;
	height: 50px;
	padding: 5px;
	text-align: right;
	text-transform: uppercase;
	transition: all .25s ease;
}
.calDateSquare h4 {
	font-size: 1.3em;
	line-height: 1;
	margin: 0;
}

.footer-content {
	border-top: 2px solid rgba(255,255,255, 0.4);
	padding: 20px 0 20px 0;
	font-weight: 500;
}

.newsletter-input {
	background: transparent;
	border: $border-default solid rgb(255,255,255);
	color: rgb(255,255,255);
	font-weight: 500;
	height: 37px;
	margin-right: 5px;
	padding: 8px 10px;
	text-align: center;
	text-transform: uppercase;
	min-width: 300px;
	width: auto;
}
.newsletter-input:focus {
	border: $border-default solid rgb(255,255,255);
	outline: none;
}
.mc-field-group .fw-btn {
	border: 3px solid rgb(255,255,255);
	height: 37px;
	line-height: 1.4;
}
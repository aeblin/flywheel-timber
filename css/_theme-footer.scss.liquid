.pre-footer {
	border-top: 2px solid $fw-slate;
	padding: 60px 0px 60px 0px;
}
.pre-footer #map {
	width: auto;
	height: 500px;
}

.footer-content {
	border-top: 2px solid rgba(255,255,255, 0.4);
	padding: 20px 0 20px 0;
	font-weight: 500;
}

.newsletter-input {
	background: transparent;
	border: $border-default solid rgb(255,255,255);
	color: rgb(255,255,255);
	font-weight: 500;
	height: 37px;
	margin-right: 5px;
	padding: 8px 10px;
	text-align: center;
	text-transform: uppercase;
	min-width: 300px;
	width: auto;
}
.newsletter-input:focus {
	border: $border-default solid rgb(255,255,255);
	outline: none;
}
.mc-field-group .fw-btn {
	border: 3px solid rgb(255,255,255);
	height: 37px;
	line-height: 1.4;
}
//Inputs
.fw-quantity-input {
  text-align: center;
  display: inline-block;
  background: transparent;
  border: 2px solid $fw-black;
  border-radius: 3rem;
  color: $fw-black;
  font-size: 2rem;
  font-weight: 400;
  width: 5rem;
  margin: 0rem 1.75rem;
  outline: none;
  &:focus {
  	border: 2px solid $fw-black;
  }
}
.fw-quantity-input.u-lightcopy {
	border: 2px solid rgb(255,255,255);
	color: rgb(255,255,255);
	&:focus {
		border: 2px solid rgb(255,255,255);
	}
}

//Buttons
.fw-btn {
  background-color: transparent;
  border: 2px solid $fw-black;
  border-radius: 0px;
  color: $fw-black;
  font-weight: 400;
	padding: 10px 15px;
  vertical-align: 13%;
  text-transform: uppercase;
  transition: all .25s;
  &:hover {
  	color: rgb(255,255,255);
  	background-color: $fw-black;
  }
  &:focus {
  	outline: none;
  }
}

.fw-btn.btn-light {
	color: rgb(255,255,255);
	border-color: rgb(255,255,255);
	&:hover {
		color: $fw-black;
		background-color: rgb(255,255,255);
	}
}

//Button Groups
.fw-btn-group > .fw-btn {
	margin: 0 1rem;
}
.fw-btn-group > .fw-btn:first-child {
	margin-left: 0;
}
.fw-btn-group > .fw-btn:last-child {
	margin-right: 0;
}
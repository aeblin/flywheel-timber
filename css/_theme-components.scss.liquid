//Inputs
.fw-quantity-input {
  display: -webkit-box;
  display: -moz-box;
  display: box;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flexbox;
  display: flex;
  background: transparent;
  border: 2px solid $fw-black;
  color: $fw-black;
  font-size: 2rem;
  font-weight: 400;
  outline: none;
  &:focus {
  	border: 2px solid $fw-black;
  }
}
.fw-quantity-input.u-lightCopy {
	border: 2px solid rgb(255,255,255);
	color: rgb(255,255,255);
	&:focus {
		border: 2px solid rgb(255,255,255);
	}
}
.fw-quantity-input button {
  display: inline-block;
  background: transparent;
  -webkit-appearance: none;
  padding: 0 15px;
  cursor: pointer;
}
.fw-quantity-input input {
  text-align: center;
  &:focus {
    outline: none;
  }
}

//Buttons
.fw-btn {
  @include workSans-n5;
  background-color: transparent;
  border: 2px solid $fw-black;
  border-radius: 0px;
  color: $fw-black;
	padding: 10px 15px;
  text-transform: uppercase;
  transition: all .25s;
  &:hover {
  	color: rgb(255,255,255);
  	background-color: $fw-black;
  }
  &:focus {
  	outline: none;
  }
}

.fw-btn.btn-light {
	color: rgb(255,255,255);
	border-color: rgb(255,255,255);
	&:hover {
		color: $fw-black;
		background-color: rgb(255,255,255);
	}
}

.fw-btn.btn-dark {
  background-color: $fw-black;
  color: rgb(255,255,255);
  &:hover {
    color: $fw-black;
    background-color: rgb(255,255,255);
  }
}

.fw-btn.btn-small {
  padding: 4px 10px;
}
.fw-btn.btn-align {
  vertical-align: 13%;
}
//Button Groups
.fw-btn-group > .fw-btn {
	margin: 0 1rem;
}
.fw-btn-group > .fw-btn:first-child {
	margin-left: 0;
}
.fw-btn-group > .fw-btn:last-child {
	margin-right: 0;
}
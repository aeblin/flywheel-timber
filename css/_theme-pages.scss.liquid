.page-intro {
  position: relative;
  height: 100vw;
  padding: 0;
  overflow: hidden;
  @media screen and (min-width: $screen-md-min) {
    max-height: 560px;
  }
  @media screen and (min-width: $screen-lg-min) {
    max-height: 720px;
  }
}
.intro-header {
  position: relative; // This is necessary to make the color overlay not interfere with text.
  @include workSans-n5;
  font-size: 4em;
  color: rgb(255,255,255);
  letter-spacing: 0.5rem;
  text-transform: uppercase;
  text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  margin-bottom: 0px;
  @media screen and (max-width: $screen-sm-max) {
    font-size: 2.5em;
    padding: 0 15px;
  }
}


// Page Components // ---
// Rectangle Callout
.rectangle {
  border: $border-thin solid $fw-black;
  background: transparent;
  display: inline-block;
  padding: 5.5px 24px;
  margin-bottom: 45px;
}
.rectangle h5 {
  @include workSans-n5;
  font-size: 18px;
  text-transform: uppercase;
  letter-spacing: 0.3rem;
  margin-bottom: 0;
}


// Page Layouts // ---
// Halves Layout
.halves {
  position: relative;
  padding: 0;
  overflow: hidden;
  @media screen and (min-width: $screen-md-min){
    height: 70vw;
    max-height: 570px;
  }
}
.half {
  @media screen and (min-width: $screen-md-min) {
    position: absolute;   
  }
}
.half:first-child {
  left: 0;
}
.half:last-child {
  right: 0;
}

.image-half {
  position: relative;
  height: 70vw;
  max-height: 570px;
  padding: 0;
  overflow: hidden;
}

.text-half {
  @media screen and (min-width: $screen-md-min) {
    top: 50%;
    transform: translate3d(0, -50%, 0);
    -webkit-transform: translate3d(0, -50%, 0);
    -moz-transform: translate3d(0, -50%, 0); 
  }
  @media screen and (max-width: $screen-sm-max) {
    padding-top: 30px;
    padding-bottom: 30px;
  }
}

// Three-Up Layout
.image-row-3 > div {
  height: 400px;
  border: $border-thick solid transparent;
}


// Learn Page // --- 
// Brew Icons
.icon-section {
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 40px;
  }
}
.brew-guide--icon {
  margin-bottom: 20px;
}
.brew-guide--icon img {
  max-height: 175px;
}
.brew-guide--method {
  letter-spacing: 0.2rem;
  text-transform: uppercase;
  white-space: nowrap;
}
h4.brew-guide--method {
  margin-top: 0;
}

// Brewing Instructions
.brew-guide {
  margin: 150px 0;
}
.brew-guide--header {
  background: $fw-black;
  padding-top: 50px;
  padding-bottom: 50px; 
}
.brew-guide--header img {
  max-height: 275px;
}
.brew-guide--ingredients {
  margin-bottom: 100px;
}
.brew-guide--ingredientSection {
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 40px;
  }
}
.brew-guide--items {
  list-style: none;
  margin: 0;
  padding: 0;
}
.brew-guide--items li {
  font-size: 16px;
  margin-bottom: 5px;
}
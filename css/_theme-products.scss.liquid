.product-wrapper {
  @media screen and (min-width: $screen-md-min) {
    margin-top: 60px;
    margin-bottom: 90px;
  }
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 30px;
  }
}

// Product Detail Card // ------
.product-details {
  border: $border-default solid $fw-black;
  padding: 40px;
  @media screen and (max-width: $screen-sm-max) {
    text-align: center; 
  }
  @media screen and (min-width: $screen-md-min) {
    text-align: right;
  }
}
.product-description {
  font-size: 1.25em;
  margin: 30px 0;
}
.product-description h1 {
  text-transform: uppercase;
  letter-spacing: .3rem;
}

// Add to Cart Row // ------
label {
  display: inline-block;
  max-width: 100%;
  font-weight: 500;
}
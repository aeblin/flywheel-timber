.product-wrapper {
  @media screen and (min-width: $screen-md-min) {
    margin-top: 60px;
    margin-bottom: 90px;
  }
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 30px;
  }
}

//Product Detail Card
.product-details {
  border: 3px solid $fw-black;
  padding: 40px;
  @media screen and (max-width: $screen-sm-max) {
    text-align: center; 
  }
  @media screen and (min-width: $screen-md-min) {
    text-align: right;
  }
}
.product-description {
  font-size: 1.25em;
}
.product-description h1 {
  text-transform: uppercase;
  letter-spacing: .3rem;
}

//Related Products
.related-products {
  border-top: 4px solid $fw-black;
}
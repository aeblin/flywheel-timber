.product-wrapper {
  @media screen and (min-width: $screen-md-min) {
    margin: 90px 0;
  }
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 30px;
  }
}

// Product Detail Card // ------
.product-details {
  border: $border-default solid $fw-black;
  padding: 40px;
  @media screen and (max-width: $screen-sm-max) {
    text-align: center; 
    padding: 15px;
  }
  @media screen and (min-width: $screen-md-min) {
    text-align: right;
  }
}
.product-description {
  font-size: 1.25em;
  margin: 30px 0;
}
.product-description h1 {
  text-transform: uppercase;
  letter-spacing: .3rem;
}

// Add to Cart Form// ------
.form-atc {
  position: relative;
}

// Quantity Selector
.qty-wrapper {
  text-align: right;
  max-width: 33%;
  width: 100%;
  @media screen and (max-width: $screen-sm-max){
    max-width: 48%;
    width: 100%;
  }
}
.qty-wrapper input {
  max-width: calc(100% - 83px);
  flex-grow: 2;
  border: none;
}
.qty-adjust {
  font-size: 20px;
}
.qty-num {
  @media screen and (max-width: $screen-sm-max) {
    max-width: 48%;
  }
}
.quantity {
  font-weight: 500;
} 

// Shopify Generated Selectors (Size, Color, Etc)
.selector-wrapper {
  text-align: left;
  text-transform: uppercase;
  width: 100%;
  max-width: 63%;
  @media screen and (max-width: $screen-sm-max) {
    max-width: 48%;
  }
}
.single-option-selector {
  display: flex;
  text-align-last: center;  
  border: 2px solid $fw-black;
  width: 100%;
  transition: all 0.25s;
  &:focus {
    outline: none;
    border: 2px solid $fw-slate;
  }
}

// Coffee Details if product is Coffee
.coffee-details {
  color: rgb(255,255,255);
  text-align: center;
  text-transform: uppercase;
}
@media screen and (max-width: $screen-xs-max) {
  .coffee-details--clear>*:nth-child(2n+1) {
    clear: left;
  }
}
@media screen and (min-width: $screen-sm-min) {
  .coffee-details--clear>*:nth-child(3n+1) {
    clear: left;
  }
}

// Regional Background Colors
.coffee-africa {
  background-color: $coffee-africa;
}
.coffee-latinamerica {
  background-color: $coffee-latinamerica;
}
.coffee-pacific {
  background-color: $coffee-pacific;
}
.coffee-espresso {
  background-color: $coffee-espresso;
}

// detail-section
.coffee-details--section {
  margin-bottom: 40px;
}

// Icons
.coffee-details--icon {
  margin-bottom: 20px;
}
.coffee-details--icon img {
  max-height: 100px;
}

// Titles
.coffee-details--title {
  margin: 0;
}

// Copy
.coffee-details--copy {
  line-height: 1.2;
}
// General
label {
  display: inline-block;
  max-width: 100%;
  font-weight: 500;
}
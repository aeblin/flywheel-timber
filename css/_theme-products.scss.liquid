.product-wrapper {
  @media screen and (min-width: $screen-md-min) {
    margin-top: 60px;
    margin-bottom: 90px;
  }
  @media screen and (max-width: $screen-sm-max) {
    margin-bottom: 30px;
  }
}

// Product Detail Card // ------
.product-details {
  border: $border-default solid $fw-black;
  padding: 40px;
  @media screen and (max-width: $screen-sm-max) {
    text-align: center; 
    padding: 15px;
  }
  @media screen and (min-width: $screen-md-min) {
    text-align: right;
  }
}
.product-description {
  font-size: 1.25em;
  margin: 30px 0;
}
.product-description h1 {
  text-transform: uppercase;
  letter-spacing: .3rem;
}

// Add to Cart Form// ------
.form-atc {
  position: relative;
}
// Quantity Selector
.qty-wrapper {
  text-align: right;
  max-width: 33%;
  width: 100%;
  @media screen and (max-width: $screen-sm-max){
    max-width: 48%;
    width: 100%;
  }
}
.qty-wrapper input {
  width: 75%;
  border: none;
}
.qty-adjust {
  font-size: 1.15em;
}
.qty-num {
  @media screen and (max-width: $screen-sm-max) {
    max-width: 48%;
  }
}
.quantity {
  font-weight: 500;
} 
// Shopify Generated Selectors (Size, Color, Etc)
.selector-wrapper {
  text-align: left;
  text-transform: uppercase;
  width: 100%;
  max-width: 63%;
  @media screen and (max-width: $screen-sm-max) {
    max-width: 48%;
  }
}
.single-option-selector {
  display: flex;
  border: 2px solid $fw-black;
  width: 100%;
}
// General
label {
  display: inline-block;
  max-width: 100%;
  font-weight: 500;
}
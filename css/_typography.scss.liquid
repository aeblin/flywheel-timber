// Font Definitions // ------
$fontFamily--workSans: 'Work Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
$lineHeight--default: 1.6;

// Font Mixins // ------
@mixin workSans-n2 {
  font-family: $fontFamily--workSans;
  font-style: normal;
  font-weight: 200;
}
@mixin workSans-n3 {
  font-family: $fontFamily--workSans;
  font-style: normal;
  font-weight: 300;
}
@mixin workSans-n4 {
  font-family: $fontFamily--workSans;
  font-style: normal;
  font-weight: 400;
}
@mixin workSans-n5 {
  font-family: $fontFamily--workSans;
  font-style: normal;
  font-weight: 500;
}
@mixin workSans-n6 {
  font-family: $fontFamily--workSans;
  font-style: normal;
  font-weight: 600;
}

body {
  @include workSans-n4;
  font-size: 14px;
  line-height: $lineHeight--default;
}

a {
	color: $fw-black;
	transition: all 0.25s ease;
	-webkit-transition: all 0.25s ease;
	-moz-transition: all 0.25s ease;
	cursor: pointer;
	&:hover, &:focus {
		color: $fw-orange;
		text-decoration: none;
	}
}

// Theme Colors // ------
$fw-black: rgb(22,22,26);
$fw-grey: rgb(82,82,86);
$fw-slate: rgb(42,42,52);
$fw-accent: rgb(192,192,192);
$fw-orange: rgb(210,82,39);
$fw-accentOrange: rgb(255,119,73);

// Coffee Colors // ------
$coffee-africa: rgb(31,181,92);
$coffee-latinamerica: rgb(41,128,185);
$coffee-pacific: rgb(231,76,60);
$coffee-espresso: rgb(22,22,26); // Same as FW Black

// Theme Components // ------
$border-thick: 4px;
$border-default: 3px;
$border-thin: 2px; 

// Drawers // ------
$drawerCartWidth: 480px;
$colorDrawers: rgb(192,192,192);
$colorDrawerBorder: darken($colorDrawers, 5%);
$colorDrawerText: rgb(22,22,26);
$drawerTransition: all 0.4s cubic-bezier(0.46, 0.01, 0.32, 1);